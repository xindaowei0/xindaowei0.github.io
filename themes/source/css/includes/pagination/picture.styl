#mid-col #pagination
    width: auto
    display flex
    flex-wrap: nowrap;
    justify-content: space-between;
    background: black 
    flex 1
    .prev-post,
    .next-post
        width: 100% 
    .background
        width: 100%
        height: 100%
        opacity: 0.4
        background: center center no-repeat
        background-size: 100% auto
        text-decoration: none
        &:hover
            opacity: 0.6    
    a
        display: block
        width: 100%
        height: 150px
        color: white
        opacity 1
        position relative
        text-decoration: none
    #right
        right: 10%
        text-align: right
    #left
        left: 10%
        text-align: left
    #right,
    #left  
        position absolute
        top: 50% - 5px
        text-overflow: ellipsis
        white-space: nowrap
        width: 80%
        overflow: hidden
        line-height: 20px
    .label
        color: #fffffb3
    #label-l
        text-align: left
        float: left
        margin: 40px 0 0 10%
    #label-r
        text-align: right
        float: right
        margin: 40px 10% 0 0

@media(max-width 600px)
    #mid-col #pagination
        flex-direction: column
        justify-content: space-between;