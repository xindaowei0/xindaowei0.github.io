@import "themes/variable.styl"

#category
    width: auto;
    margin: 0 14vw
    padding: 30px 0
h1
    font-size: 25px;
    color: white
    padding: 15px 0
    display: block
    border-bottom: gray solid 1px

.category-list,
.tag-list
    margin: 10px 0
    li
        display: inline-block
        background-color: $minorColor   
        margin: 10px
        padding: 5px
        border-radius: 2px
        &:hover
            background-color: white
            a
                color: black
        a
            color: white
            text-decoration: none
        .category-list-count,
        .tag-list-count
            padding-left: 7px
            font-weight: bold
