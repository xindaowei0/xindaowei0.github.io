// /*BLOCKQUOTE*/

#post-content blockquote {
    background-color: var(--boxes);
    border-left: 4px solid var(--primary-color);
    border-radius: 0.3rem;
    padding: 1rem;
    border-right: 4px solid var(--boxes); /* removes arc with tiny blue color from top-right and bottom-right corner */
}

#post-content blockquote blockquote {
    padding-right: 0;
}

// /*TABLE*/

#post-content table {
    font-size: 0.875rem;
    padding: 0;
    margin: 1.5rem 0;
    word-break: initial;
}

#post-content table tr:not(:has(.codeblock-content)) {
    border-top: 1px solid var(--borders);
    border-bottom: 1px solid var(--borders);
    margin: 0;
    padding: 0;
}


#post-content table tbody tr:last-child {
    border-bottom: none;
}

#post-content table tr th {
    font-weight: bold;
    border: none;
    border-bottom: solid 2px var(--borders);
    margin: 0;
    padding: 10px 16px;
    transition-duration: 0.3s;
    transition-property: background-color;
}

#post-content table tr td {
    border: none;
    margin: 0;
    padding: 10px 16px;
    transition-duration: 0.3s;
    transition-property: background-color;
}

#post-content table tr td:not(.codeblock-content, .gutter):hover,
#post-content table tr th:hover {
    background-color: var(--boxes);
}

#post-content table tr th:first-child,
#post-content table tr td:first-child {
    margin-top: 0;
}

#post-content table tr th:last-child,
#post-content table tr td:last-child {
    margin-bottom: 0;
}



