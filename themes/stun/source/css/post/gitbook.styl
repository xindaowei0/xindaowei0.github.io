#post-content ol li {
  margin: 0.4rem 0;
}

#post-content ul,
#post-content ol {
  margin-top: 8px;
  margin-bottom: 8px;
  padding-left: 20px;
}

ul:first-child,
ol:first-child {
    margin-top: 0;
}

ul:last-child,
ol:last-child {
    margin-bottom: 0;
}

