@import "colors.styl"


@font-face {
    font-family: "Headings";
    src: url("/font-awesome/webfonts/fa-solid-900.eot");
    src: url("/font-awesome/webfonts/fa-solid-900.eot?#iefix") format("embedded-opentype"), 
         url("/font-awesome/webfonts/fa-solid-900.woff") format("woff"), 
         url("/font-awesome/webfonts/fa-solid-900.ttf") format("truetype"), 
         url("/font-awesome/webfonts/fa-solid-900.svg#micon") format("svg")
}

/*自定义样式，实时生效*/

/* 全局属性
* 页边距 padding:30px;
* 全文字体 font-family:optima-Regular;
* 英文换行 word-break:break-all;
color:#2b2b2b;
*/

#post
  background-image: linear-gradient(90deg, rgba(50, 0, 0, 0.04) 3%, rgba(0, 0, 0, 0) 3%), linear-gradient(360deg, rgba(50, 0, 0, 0.04) 3%, rgba(0, 0, 0, 0) 3%);
  
  background-size: 20px 20px;
  background-position: center center;
#post-content
  line-height: 1.75;
  color: #2b2b2b;
  // font-family: Optima-Regular, Optima, PingFangTC-Light, PingFangSC-light, PingFangTC-light;
  letter-spacing: 2px;

/* 段落，下方未标注标签参数均同此处
* 上边距 margin-top:5px;
* 下边距 margin-bottom:5px;
* 行高 line-height:26px;
* 词间距 word-spacing:3px;
* 字间距 letter-spacing:3px;
* 对齐 text-align:left;
* 颜色 color:#3e3e3e;
* 字体大小 font-size:16px;
* 首行缩进 text-indent:2em;
*/
#post-content p
  color: #2b2b2b;   
  margin: 10px 0px;
  // letter-spacing: 2px;
  font-size: 14px;
  // word-spacing: 1px;

/* 一级标题 */
#post-content h1 
  font-size: 25px;
  display: inline-block;
  font-weight: bold;
  color: $color1;


/* 一级标题修饰 请参考有实例的主题 */
#post-content h1:after {}

/* 二级标题 */
#post-content h2 {
  display: block;
  border-bottom: 4px solid $color1;
}

/* 二级标题内容 */
#post-content h2
  display: flex;
  color: $color1;
  font-size: 20px;
  // margin-left: 40px;

/* 二级标题前缀 */
#post-content h2:before   
    font-family: "Headings";
    content: '\f001'
    display: flex;
    width: auto
    background-size: 20px 20px;
    margin-bottom: -22px;
    margin-right: 5px


/* 二级标题后缀 */
#post-content h2::after
    content: ""
    display: flex;
    box-sizing: border-box;
    width: 200px;
    height: 10px;
    border-top-left-radius: 20px;
    background: rgba($color1, .5);
    color: rgb(255, 255, 255);
    font-size: 16px;
    letter-spacing: 0.544px;
    justify-content: flex-end;
    box-sizing: border-box !important;
    overflow-wrap: break-word !important;
    position: absolute
    bottom: 0
    right: 0

/* 三级标题 */
#post-content h3 
  display block
  font-size: 17px;
  font-weight: bold;
  text-align: center;
  position:relative;
  margin-top: 20px;
  margin-bottom: 20px;
  width:fit-content;
  width:-webkit-fit-content;
  width:-moz-fit-content
  margin: 20 auto
  margin-inline: auto !important

/* 三级标题内容 */
#post-content h3::after
  content: ""
  width: auto;
  position absolute
  left: 0
  right: 0
  bottom: 0px
  border-bottom: 2px solid $color2;
  color: #2b2b2b;


#post-content h3:before
  font-family: "Headings";
  font-size: 30px
  margin-top: 20px
  z-index -1
  content:'\f58f';
  height:32px;
  display:block;
  color: $color2
  margin:auto;

/* 三级标题修饰 请参考有实例的主题 */
#post-content h3:after {}

#post-content h4
  height:16px;
  line-height:16px;
  font-size: 16px;


#post-content h4:before
  font-family: "Headings";
  content:'\f8cf';
  color: $color2
  display:inline-block;
  margin-right: 5px


/* 无序列表整体样式
* list-style-type: square|circle|disc;
*/
#post-content ul li
  font-size: 15px;
  color: #595959;
  list-style-type: none ;
  margin-left: 20px
  position relative
#post-content ul li:not(:has(input[type="checkbox"])):before
  content: "" // \f8d9
  background: rgba($color1, .5);
  width: 12px;
  height: 12px;
  border-radius: 20px
  top 6px;
  left -20px;
  position: absolute

#post-content ul li li:before
  content: "" // \f8d9
  background: none;
  width: 6px;
  height: 6px;
  border: solid 3px rgba($color1, .5);
  border-radius: 20px
  top 6px;
  left -20px;
  position: absolute
#post-content ul li  li li:before
  content: "" // \f8d9
  background: none;
  width: 6px;
  height: 6px;
  border: solid 3px rgba($color1, .5);
  border-radius: 0px
  top 6px;
  left -20px;
  position: absolute
/* 有序列表整体样式
* list-style-type: upper-roman|lower-greek|lower-alpha;
*/
#post-content ol
  counter-reset: li
#post-content ol li
  font-size: 15px;
  color: #595959;
  position relative
  margin-left: 23px
#post-content ol>li::before
  content: counter(li)
  counter-increment: li 1
  color: $color1
  position absolute
  top: 3.5px
  left: -24px
  width: 17px;
  height: 17px;
  text-align: center
  line-height: 16px
  border: 1px solid rgba($color1, .5)
  background: rgba($color1, 0.1)
  border-radius: 20px
  letter-spacing: -2px !important
  font-size 14px
  font-family "sans serif"


/* checkbox 样式 */
#post-content 
  input[type=checkbox]
    width: 0;
    margin-left 0
    padding-left: 0

  li > input:checked:before,
  li > input[checked]:before,
  input[type="checkbox"]:checked:before
    content: '';
    background-color: white;
    background: url('/img/checked.svg') no-repeat center, $color2;
    
  li input::before
    content: "";
    display: inline-block;
    width: 1.0125rem;
    height: 1.0125rem;
    border: 1px solid $color2;
    border-radius: 0.2rem;
    background-color: #fdfdfd;
    margin-left: -1rem;
    margin-right: 0.1rem;
    margin-top: -.1rem;


/* 引用
* 左边缘颜色 border-left-color:black;
* 背景色 background:gray;
*/
#post-content blockquote::before
  content: "❝";
  color: rgba($color1, .5);
  font-size: 34px;
  line-height: 1;
  font-weight: 700;


#post-content blockquote 
    line-height: 1.55em;
    font-weight: 400;
    border-radius: 6px;
    color: #595959;
    font-style: normal;
    font-size: 0.9em;
    overflow: auto;
    padding: 10px 10px 10px 20px;
    margin: 20px 0
    box-sizing: inherit;
    border: solid rgba($color1, 0.4)  1px
    background: rgba($color1, 0.1);


#post-content blockquote 
    footer
        display block
        width: calc(100% - 40px)
        margin-top 8px
        text-align right
        word-break break-all
        &:before
            content: "——"
            
#post-content blockquote p
  color: #595959;


#post-content blockquote::after
  content: "❞";
  float: right;
  color: rgba($color1, .5);


/* 链接
* border-bottom: 1px solid #009688;
*/
#post-content a {
  color: $color1;
  font-weight: normal;
  border-bottom: 1px solid $color3;
  // filter: invert(50%) sepia(99%) saturate(1310%) hue-rotate(183deg) brightness(105%) contrast(96%);
}

#post-content strong::before {
  content: '「';
}

/* 加粗 */
#post-content strong {
  color: $color4;
  font-weight: bold;
}

#post-content strong::after {
  content: '」';
}

/* 斜体 */
#post-content em {
  font-style: normal;
  color: $color4;
  font-weight:bold;
}

/* 加粗斜体 */
#post-content em strong {
  color: $color4;
}

/* 删除线 */
#post-content del {
  color: $color4;
}

/* 分隔线
* 粗细、样式和颜色
* border-top:1px solid #3e3e3e;
*/
#post-content hr {
  height: 1px;
  padding: 0;
  border: none;
  border-top: 2px solid $color3;
  // filter: invert(50%) sepia(99%) saturate(1310%) hue-rotate(183deg) brightness(105%) contrast(96%);
}

/* 图片
* 宽度 width:80%;
* 居中 margin:0 auto;
* 居左 margin:0 0;
*/
#post-content img {
  border-radius: 6px;
  display: block;
  margin: 20px auto;
  object-fit: contain;
  box-shadow:2px 4px 7px #999;
}

/* 行内代码 */
#post-content p code,
#post-content li code,
#post-content table code {
  color: $color4;
  background: $color5;
  padding:0 2px;
  border-radius:2px;
  height:21px;
  line-height:22px;
}

/*
* 表格内的单元格
* 字体大小 font-size: 16px;
* 边框 border: 1px solid #ccc;
* 内边距 padding: 5px 10px;
*/
#post-content table tr th,
#post-content table tr td 
  font-size: 14px;
  color: #595959;
  border: solid rgba($color1, 0.4)  1px

#post-content table tr th
  background: rgba($color1, 0.1);
  font-weight: bold

#post-content table tr:nth-child(2n)
  background: rgba($color1, 0.1);

