@import "../themes/variable.styl"

#sidebar-toc
    margin-top: 45px
    -webkit-box-shadow 1px 0 5px rgba(100,100,100,.4)//rgba(0,0,0,.4)
    box-shadow 1px 0 5px rgba(100,100,100,.4) // rgba(0,0,0,.4)
    padding-top 10px
    padding-bottom: 10px
    width: 300px

#toc-outer
    width: 300px
#catalog
    border-left: 4px solid $minorColor
    font-size: 20px
    padding-left: 16px
    margin-top: 10px

#tocs
    margin: 20px;    

#tocs 
    overflow-y: auto


#tocs>.toc-list 
    overflow: hidden;
    position: relative;
    padding: 9px;


#tocs>.toc-list>.toc-list-item 
    padding-left: 30px;
    border-left: $sInfoBg solid 1px;


#tocs>#tocs-list li 
    list-style: none


.toc-list 
    margin: 0;
    padding-left: 20px


a.toc-link 
    color: currentColor;
    height: 100%;
    text-decoration: none;
    line-height: 25px;


.is-collapsible 
    max-height: 1000px;
    overflow: hidden;
    transition: all 300ms ease-in-out


.is-collapsed 
    max-height: 0


.is-position-fixed 
    position: fixed !important;
    top: 0


.is-active-link 
    font-weight: 700


.toc-link::before 
    content: ' ';
    display: inline-block;
    height: inherit;
    left: 0;
    margin-top: 4px;
    height: 13px !important;
    position: absolute;
    width: 13px


.is-active-link::before 
    height: 15px;
    border-radius: 20px;
    background-color: white;
    border: solid 3px $minorColor;
